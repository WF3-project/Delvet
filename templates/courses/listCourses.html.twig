{% extends 'base.html.twig' %}
{% block title %}tout nos cours{% endblock %}
{% block body  %}
    <div class="container " >
      <div class="card bg-light mb-3" style="width: 18rem; ">
            <div class="card-header bg-primary text-white text-uppercase"><i class="fa fa-list"></i> Cat√©gories</div>
                <ul class="list-group category_block">
                        
                    {% for category in categories %}
                         <li class="list-group-item">
                            <a href="{{ path('categorieCour', {slug:category.slug}) }}">{{ category.name }}</a>
                                {# {{path()}} #}
                        </li>
                    {% endfor %}
                 </ul>
            </div>
        </div> 
                
    </div>


<div class="container d-flex flex-wrap">
{% for course in courses %}

    <div class="card d-flex mr-2 mb-2 " style="width: 200px;">
    <div class="card-header bg-primary text-white text-uppercase"><i class="fa fa-list"></i>{{course.name}}</div>
    <img src="..." class="card-img-top" alt="...">
    <div class="card-body">
    
        <h5 class="card-title">{{ null != course.categories  ? course.categories.name : ''  }}</h5> 
   
        <p class="card-text">{{course.description}}</p>
        <p class="card-text text-center">nombres de vues {{course.numberView}}
        <a  class="btn btn-primary" href="{{ path('course', {id:course.id}) }}">Go somewhere</a>
        {# {{ path('categorieCour', {id:course.id}) }} #}
    </div>
    </div>

{% endfor %}
</div>
{% endblock %}