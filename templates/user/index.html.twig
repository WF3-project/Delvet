{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center mr-auto">
    <h3>Bonjour {{user.email}} </h3>
</div>


    
<div class="container d-flex justify-content-center " >
    <div class="card bg-light mb-3" style="width:50vw;">
         <div class="card-header text-white text-uppercase" style="background-color:#4682b4;"><i class="fa fa-list"></i>    <h3>Vos Cours</h3>
         </div>

        <ul class="d-flex flex-wrap justify-content-center">
            {% for course in coursesUser %}
                <li class="" >
                    <div class="card mt-3" style="width:45vw; border-width: 5px; border-color: #4682b4;">
                    <div class="card-header  text-white text-center  text-info border-lg font-weight-bold" style="border-width :10px;border-width: 5px; border-color: #4682b4;">
                        {{course.name}}
                    </div>
                    <div class="d-flex">
                        <img src="{{ asset( 'images/cour/' ~ course.fileName ) }}" class="card-img-top" style="width: 200px;" >
                        <div class="card-body ">
                            <p class="card-text">{{course.description}}</p>
                            
                        </div>
                        <div class="d-flex flex-column">
                            <a href="{{path('course', {id:course.id})}}" class="btn btn-info font-weight-bold mt-3 mb-1 mr-3 ">Go somewhere</a>
                            <a href="{{path('userCourseDelete', {id:course.id})}}" class="btn btn-primary font-weight-bold mb-2 mr-3" >retirer de la list</a>
                        </div>
                    </div>
                    </div>
                    
                   
                </li>
            {% endfor %}
            
        </ul>
    </div>
</div>


<div class="container d-flex justify-content-center mb-3">
    <div class="card " style="width: 50vw;">
    <div class="card-header bg-primary text-white text-uppercase"><i class="fa fa-list"></i> les 5 dernier cours </div>
    <div class="card-body d-flex">

{% for course in courses %}
        <div class="card mr-2" >
        <div class="card-header bg-primary text-white text-uppercase"><i class="fa fa-list"></i>{{course.name}}  </div>
        <div class="m-2">
            <img src="{{ asset( 'images/cour/' ~ course.fileName ) }}" class="card-img "  >
        </div>
        <div class="body">
            <p class="card-text text-center">{{course.description}}</p>
            <p class="card-text text-center">{{course.NumberView}}</p>  
            <a href="{{path('course', {id:course.id})}}" class="btn btn-primary">Go somewhere</a>
            
        
    
{% endfor %}
    </div>
    </div>
    </div>
</div>
{% endblock %}
